@using Microsoft.AspNet.Identity
@model IEnumerable<HarmonyWebApp.Models.UserInfoViewModel>

@{
    ViewBag.Title = "Dane użytkowników";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}




<div class="panel panel-success">
    <div class="panel-heading">
        <h5 class="panel-title"><b><center>Lista użytkowników</center></b></h5>
    </div>


    <div class="panel-group">

        <div class="panel panel-default">
            <div class="panel-body">

                <table class="table table-striped table-condensed table-bordered">
                    <tr>
                        <th><center>Imię i nazwisko</center></th>
                        <th><center>Adres</center></th>
                        <th><center>Kod pocztowy</center></th>
                        <th><center>Miasto</center></th>
                        <th><center>Student</center></th>
                        <th><center>Studia stacjonarne</center></th>
                        <th><center>Wydział</center></th>
                        <th><center>Kierunek</center></th>
                        <th><center>Akcje</center></th>
                    </tr>

                    @foreach (var item in Model)
                    {

                        <tr>
                            <td style="min-width: 100px"><center>@Html.ActionLink(item.FirstName + " " + item.LastName, "EditUser", new { item.Id }) </center></td>
                            <td style="min-width: 100px"><center>@item.Address</center></td>
                            <td style="min-width: 100px"><center>@item.PostalCode</center></td>
                            <td style="min-width: 100px"><center>@item.City</center></td>
                            <td style="min-width: 100px"><center>@(item.Student ? "TAK" : "NIE")</center></td>
                            <td style="min-width: 100px"><center>@(item.FullTimeStudies ? "TAK" : "NIE")</center></td>
                            <td style="min-width: 100px"><center>@item.DepartmentName</center></td>
                            <td style="min-width: 100px"><center>@item.FieldOfStudyName</center></td>
                            <td style="min-width: 100px"><center>@Html.ActionLink("Zajęcia użytkownika", "EditUsersActivities", new { item.Id }, new { @class = "btn btn-success" }) </center></td>
                        </tr>


                    }
                </table>

            </div>
        </div>
    </div>
    </div>













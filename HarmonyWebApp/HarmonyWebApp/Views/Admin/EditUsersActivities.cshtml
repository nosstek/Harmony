
@model IEnumerable<HarmonyWebApp.Models.UsersActivitiesViewModel>


@{
    ViewBag.Title = "UsersActivities";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edycja zajęć użytkownika</h2>



<div class="panel panel-default">
    <div class="panel-heading">
        <h1>Zajęcia użytkownika:</h1>
    </div>
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Id kursu</th>
            <th>Nazwa kursu</th>
            <th>Kod kursu</th>
            <th>Zajęte/Ilość miejsc</th>
            <th>Forma kursu</th>
            <th>Nazwa kierunku</th>
            <th>Nazwa wydziału</th>
            <th>Akcje</th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="15"> Uzytkownik nie jest zapisany na żadne zajęcia </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
               
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.CourseId</td>
                    <td>@item.CourseName</td>
                    <td>@item.CourseCode</td>
                    <td>@item.SeatsOccupied / @item.NumberOfSeats</td>
                    <td>@item.CourseForm</td>
                    <td>@item.FieldName</td>
                    <td>@item.DepartmentName</td>

                    <td>
                        @using (Html.BeginForm("DeleteUserFromActivity", "Admin", item, FormMethod.Post))
                        {
                            @Html.Hidden("id", item.UserId)
                            <input type="submit" value="Wypisz"/>
                        }
                    </td>

                </tr>
              }
         }
    </table>
</div>

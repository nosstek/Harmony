@model HarmonyWebApp.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Harmony - Zmień hasło";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}


<div class="col-md-12 white-bg text-content">
    <h1>Zmiana hasła użytkownika</h1>

    <div class="col-md-4">
        <p>Zmień swoje hasło</p> <br/>

        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new {@class = "form-group", role = "form"}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <p>Aktualne hasło</p>
            @Html.PasswordFor(m => m.OldPassword, new { @class = "input-custom" })<br />
            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })

            <br />
            <p>Nowe hasło</p>
            @Html.PasswordFor(m => m.NewPassword, new {@class = "input-custom"}) <br/>
            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })

            <br />
            <p>Potwórz nowe hasło</p>
            @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "input-custom"}) <br/>
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })


            <br/><br/>
            <input type="submit" value="Zmień hasło" class="panel-button"/>
        }

    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
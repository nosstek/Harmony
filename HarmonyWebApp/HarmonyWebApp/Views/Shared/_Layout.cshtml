<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class="wrapper">
        <header>
            <div class="container container-custom">
                <div class="col-md-12" id="panel-top">
                    <div class="col-xs-6">
                        <img src="~/Content/img/logo.png" class="img-responsive">
                        <h2>Harmony</h2>
                    </div>
                    <div class="col-xs-6">
                        <ul class="pull-right">
                            <li>@Html.ActionLink("Logowanie", "Login", "Account", routeValues: null, htmlAttributes: new {id = "loginLink"})</li>
                            <li>@Html.ActionLink("Rejestracja", "Register", "Account", routeValues: null, htmlAttributes: new {id = "registerLink"})</li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-12" id="panel-body">
                    @if (TempData["CheckBoxError"] != null)
                    {
                        <div class="alert alert-danger"> @TempData["CheckBoxError"] </div>
                    }
                    @RenderBody()
                </div>
            </div>
        </header>
        <ul class="bg-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

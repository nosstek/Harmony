@using PagedList;
@using PagedList.Mvc;
@model IPagedList<HarmonyWebApp.Entities.Activity>

@{
    ViewBag.Title = "Harmony - Administracja";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3>Panel administacyjny - Kursy które są w bazie </h3>


<p>
    @using (Html.BeginForm("OverviewCourses", "Home", FormMethod.Get))
    {
    <p>
        Szukaj za pomocą:
        @Html.RadioButton("searchBy", "Name", true) Nazwa
        @Html.RadioButton("searchBy", "Code") Kod grupy<br />
        @Html.TextBox("searchString")
        <input type="submit" value="Szukaj" />
    </p>
    }
    </p>



    <div class="panel panel-default">
    <div class="panel-heading">
        <h3>Wszystkie zajęcia</h3>
    </div>
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th>ID</th>
            <th>Kod</th>
            <th>Nazwa</th>
            <th>Opis</th>
            <th>Start</th>
            <th>Koniec</th>
            <th>Akcje</th>
        </tr>
        @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Code</td>
                <td>@Html.ActionLink(item.Name, "Edit", new { item.Id })</td>
                <td>@item.Description</td>
                <td>@item.StartDate</td>
                <td>@item.EndDate</td>
                <td>
                    @using (Html.BeginForm("Delete", "Admin"))
                    {
                        @Html.Hidden("id", item.Id)
                        <input type="submit" value="Usuń" />
                    }
                </td>
            </tr>
        }
    </table>

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, searchBy = Request.QueryString["searchBy"], searchString = Request.QueryString["searchString"] }),
new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded })

</div>

<div class="panel-footer">
    @Html.ActionLink("Stwórz nowy kurs", "Create", null, new { @class = "btn btn-default" })
</div>
</div>

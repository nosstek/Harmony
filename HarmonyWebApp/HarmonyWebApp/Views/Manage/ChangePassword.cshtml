@model HarmonyWebApp.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Harmony - Zmień hasło";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-group", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Zmiana hasła</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-md-2 control-label">Aktualne hasło</label>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.OldPassword, new {@class = "form-control"})
        </div>
    </div>
    
    <div class="form-group">
        <label class="col-md-2 control-label">Nowe hasło</label>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new {@class = "form-control"})
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">Potwierdź nowe hasło</label>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control"})
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Zmień hasło" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
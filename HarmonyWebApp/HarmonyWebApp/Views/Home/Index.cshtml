@model HarmonyWebApp.Models.UserInfoViewModel

@{
    ViewBag.Title = "Harmony - Strona główna";
    Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
}


<div class="panel panel-primary">
    <div class="panel-heading">
        <h5 class="panel-title"><b><center>Twoje dane</center></b></h5>
    </div>

    <div class="panel-group">

        <div class="panel panel-default">
            <div class="panel-body">

                Imię i nazwisko: <strong> @Model.FirstName @Model.LastName</strong> <br />
                Adres: <strong>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp @Model.Address, @Model.PostalCode @Model.City  </strong> <br />
                Typ studiów:<strong>&nbsp&nbsp&nbsp @(Model.FullTimeStudies ? "Dzienne" : "Zaoczne")</strong> <br />

                <br />

            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">

                <strong>                
                    Kierunek: @Model.FieldOfStudyName </br>
                    @Model.DepartmentName
                </strong>



</div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                @if(@Model.ImageBytes != null ){
                <img id="zdjecie" src="data:image/jpg;base64, @Convert.ToBase64String(@Model.ImageBytes)"/>
                }
            </div>
        </div>


    </div>
        </div>


@model IEnumerable<HarmonyWebApp.Entities.Activity>
@{ 
    ViewBag.Title = "Harmony - Administracja";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Wszystkie zajęcia</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>ID</th>
                <th>Kod</th>
                <th>Nazwa</th>
                <th>Opis</th>
                <th>Start</th>
                <th>Koniec</th>
                <th>Akcje</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Code</td>
                    <td>@Html.ActionLink(item.Name, "Edit", new { item.Id })</td>
                    <td>@item.Description</td>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>
                    <td>
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("id", item.Id)
                            <input type="submit" value="Usuń" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="panel-footer">
        @Html.ActionLink("Stwórz nowy kurs", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>
@model IEnumerable<HarmonyWebApp.Models.Database.Activity>

@{
    ViewBag.Title = "Administracja: Wszystkie zajęcia";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Wszystkie zajęcia</h3>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>ID</th>
                <th>Nazwa</th>
                <th>Opis</th>
                <th>Start</th>
                <th>Koniec</th>
                <th>Akcje</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@Html.ActionLink(item.name, "Edit", new { item.id })</td>
                    <td>@item.description</td>
                    <td>@item.start_date</td>
                    <td>@item.end_date</td>
                    <td>
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("id",item.id)
                            <input type="submit" value="Usuń" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    
    <div class="panel-footer">
        @Html.ActionLink("Stwórz nowy kurs", "Create", null, new { @class = "btn btn-default" })
    </div>
</div>